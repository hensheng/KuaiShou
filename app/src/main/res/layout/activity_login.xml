<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.zucc.wmhxa.kuaishou.activity.login.LoginActivity">



    <EditText
        android:id="@+id/login_et_password"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        />
    <EditText
        android:id="@+id/login_et_username"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_et_password"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/login_bt_login"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_et_password"
        android:layout_marginTop="16dp"
        android:background="#1E90FF"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="登陆"
        />
    <Button
        android:id="@+id/login_bt_newuser"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/login_bt_login"
        android:layout_alignEnd="@+id/login_bt_login"
        android:text="新用户注册"
        android:background="#FFFFFF"
        android:textColor="#1E90FF"
        />
    <ImageView
        android:id="@+id/login_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/login_et_username"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="#1E90FF"

        />


</RelativeLayout>
